{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="text-center">{{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}€</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td><a href="{{ path('category_show', {'id': product.category.id}) }}">{{ product.category.name }}</a></td>
            </tr>
        </tbody>
    </table>
<div class="row">
    <a href="{{ path('product_index') }}"><button type="button" class="btn btn-info mb-2 ">Revenir à la liste</button></a>
</div>
    {% for role in roles %}
        {% if role == 'ROLE_ADMIN' %}
            <a href="{{ path('product_edit', {'id': product.id}) }}"><button type="button" class="btn btn-warning mb-2 ">Mise à jour</button></a>
            {{ include('product/_delete_form.html.twig') }}
        {% endif %}
    {% endfor %}


{% endblock %}
